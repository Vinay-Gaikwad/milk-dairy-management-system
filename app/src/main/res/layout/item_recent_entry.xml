<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvCustomerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ग्राहक क्र.: 1"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAnimalType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="प्राणी प्रकार: म्हैस"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="तारीख: 2025-05-01"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLiters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="लिटर: 5.0"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="एकूण: ₹170.0"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
